extends layout
block main
  .col-lg-3
    .row
      a.btn.btn-success New Message
      table.table.table-striped
        thead
          tr
            th Send to...
        tbody#contacts(data-bind="foreach: TableRows")
          tr
            td(data-bind='text: name')
  .col-lg-9
    .row
      a.btn.btn-info(href='/')
        i.fa.fa-inbox  Inbox
      &nbsp;
      a.btn.btn-info(href='/')
        i.fa.fa-inbox  Anotherbox
      &nbsp;
      a.btn.btn-info(href='/')
        i.fa.fa-inbox  Yetanotherbox
      &nbsp;
      a.btn.btn-info(href='/')
        i.fa.fa-inbox  Evenmoreboxes
    .row
      table.table.table-striped
        thead
          tr
            th Date
            th From
            th Subject
            th Flags
        tbody#messages(data-bind="foreach: TableRows")
          tr
            td(data-bind='text: date')
            td(data-bind='text: from')
            td(data-bind='text: subject')
block userjs
  != js('index')
  != js('socket')